<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D3C59">

    <!-- Top Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topCard"
        android:layout_width="0dp"
        android:layout_height="117dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitleInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Invoice"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Middle Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middleCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_color_card3"
        app:layout_constraintTop_toBottomOf="@id/topCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ScrollView to handle content overflow -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Client Information Section -->

                <!-- Vehicle Information Section -->
                <TextView
                    android:id="@+id/tvInvoiceDetailsHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:text="Client Information"
                    android:textColor="#2D3C59"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etInvoiceClientEmail"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_edittext2"
                    android:ems="10"
                    android:hint="Client Email Address"
                    android:inputType="textEmailAddress"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#2D3C59"
                    android:textColorHint="#80000000"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvInvoiceDetailsHeading" />

                <TextView
                    android:id="@+id/tvVehicleInfoHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Information"
                    android:textStyle="bold"
                    android:textColor="#2D3C59"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etInvoiceClientEmail" />

                <EditText
                    android:id="@+id/etVehicleReg"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_edittext2"
                    android:ems="10"
                    android:hint="Vehicle Registration Number"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#2D3C59"
                    android:textColorHint="#80000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvVehicleInfoHeading" />

                <EditText
                    android:id="@+id/etVehicleVIN"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_edittext2"
                    android:ems="10"
                    android:hint="Vehicle VIN Number"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#2D3C59"
                    android:textColorHint="#80000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etVehicleReg" />

                <EditText
                    android:id="@+id/etVehicleOdometer"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_edittext2"
                    android:ems="10"
                    android:hint="Odometer Reading"
                    android:inputType="number"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#2D3C59"
                    android:textColorHint="#80000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etVehicleVIN" />

                <!-- Service Information Section -->

                <TextView
                    android:id="@+id/tvServiceInfoHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Service Information"
                    android:textColor="#2D3C59"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etVehicleOdometer" />

                <TextView
                    android:id="@+id/tvClientServiceDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="112dp"
                    android:layout_marginTop="20dp"
                    android:text="Client Service Request Info"
                    android:textColor="#2D3C59"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvServiceInfoHeading" />

                <EditText
                    android:id="@+id/etDescriptionJob"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_edittext2"
                    android:ems="10"
                    android:gravity="top|start"
                    android:hint="Description of tasks done"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:padding="12dp"
                    android:textColor="#2D3C59"
                    android:textColorHint="#80000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvClientServiceDescription" />

                <EditText
                    android:id="@+id/etPartsUsed"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_edittext2"
                    android:ems="10"
                    android:gravity="top|start"
                    android:hint="Fill Out Parts Used"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:padding="12dp"
                    android:textColor="#2D3C59"
                    android:textColorHint="#80000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etDescriptionJob" />

                <EditText
                    android:id="@+id/etCostEstimate"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_edittext2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Total Cost"
                    android:inputType="numberDecimal"
                    android:textColor="#2D3C59"
                    android:textColorHint="#80000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etPartsUsed" />

                <Button
                    android:id="@+id/submitInvoiceBtn"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:minWidth="140dp"
                    android:text="Submit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etCostEstimate"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>