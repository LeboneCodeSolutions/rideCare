<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBatteryReplaceContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_width="@dimen/clServiceContainer_layoutWidth"
            android:layout_height="@dimen/clServiceContainer_layoutHeight"
            android:layout_marginTop="@dimen/clServiceContainer_layoutMarginTop"
            android:background="@drawable/bg_color_card_gradient_2"
            android:padding="@dimen/clServiceContainer_padding">


            <TextView
                android:id="@+id/tvBatteryReplaceChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/clTextView_marginBottom"
                android:hint="Battery Replacement"
                android:textColorHint="@color/white"
                android:textAlignment="center"
                android:textSize="@dimen/clTextView_textSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tvVehicleTrim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/clTextView_MarginStart"
            android:layout_marginTop="@dimen/clTextView_MarginTop"
            android:text="Vehicle Trim"
            android:textColor="@color/black"
            android:textSize="@dimen/clTextView_textSize"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clBatteryReplaceContainer" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilVehicleTrim"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVehicleTrim">

            <AutoCompleteTextView
                android:id="@+id/ddVehicleTrim"
                android:background="@android:drawable/edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/clServiceContainer_layoutHeight"
                android:hint="Hatchback"
                android:inputType="none"
                android:textSize="@dimen/clTextView_textSize"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvStartStop"
            android:layout_width="224dp"
            android:layout_height="51dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="12dp"
            android:hint="Does your vehicle have a start/stop option"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilVehicleTrim" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilStartStop"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStartStop">

            <AutoCompleteTextView
                android:id="@+id/ddStartStop"
                android:background="@android:drawable/edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/clServiceContainer_layoutHeight"
                android:hint="Yes / No"
                android:inputType="none"
                android:textSize="@dimen/clTextView_textSize"/>
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSubmitBatteryReplaceJob"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_color_card_gradient_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilStartStop"
            >

            <TextView
                android:id="@+id/tvBatteryReplaceJobAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Accept"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
