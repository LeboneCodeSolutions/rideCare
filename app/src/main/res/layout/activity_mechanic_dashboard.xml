<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- Profile button (top-right) -->
    <ImageView
        android:id="@+id/editProfile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/profile_candidate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Welcome title -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Mechanic!"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/editProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Quote -->
    <TextView
        android:id="@+id/textViewQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress, not perfectionâ€”every small step counts."
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Job Board button -->
    <Button
        android:id="@+id/btnViewJobsBoard"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Job Board"
        android:backgroundTint="#00BCD4"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/textViewQuote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Current Jobs button -->
    <Button
        android:id="@+id/btnViewCurrentJobs"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Current Jobs"
        android:backgroundTint="#00BCD4"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnViewJobsBoard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Create Invoice button -->
    <Button
        android:id="@+id/btnCreateInvoice"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Create Invoice"
        android:backgroundTint="#00BCD4"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnViewCurrentJobs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Logout button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="LOG-OUT"
        android:backgroundTint="#FF0000"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnCreateInvoice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
