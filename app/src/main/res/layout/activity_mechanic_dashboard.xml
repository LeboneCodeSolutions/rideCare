<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- Profile Image in top-right corner -->
    <ImageView
        android:id="@+id/editProfile"
        android:layout_width="37dp"
        android:layout_height="51dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/profile_candidate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Welcome Text -->

    <!-- Inspirational Quote -->

    <!-- Buttons -->

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Welcome"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/editProfile"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:text="Progress, not perfectionâ€”every small step counts."
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#FF0000"
        android:text="Log-out"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateInvoice" />

    <Button
        android:id="@+id/btnViewCurrentJobs"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00BCD4"
        android:text="Current Jobs"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnViewJobsBoard" />

    <Button
        android:id="@+id/btnViewJobsBoard"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#00BCD4"
        android:text="Job Board"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <Button
        android:id="@+id/btnCreateInvoice"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00BCD4"
        android:text="Create Invoice"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnViewCurrentJobs" />

</androidx.constraintlayout.widget.ConstraintLayout>
